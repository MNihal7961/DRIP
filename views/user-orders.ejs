<%- include('../partials/user-head.ejs') %>
    <%- include('../partials/user-nav.ejs') %>
        <div class="container ">
           <% if (orderData.length>0) { %>
            <h1 class="text-center mb-4 mt-3">Your Orders <i class="fa fa-shopping-bag"></i></h1>
           <% } %>
            <div class="row">
                <% if (!orderData || orderData.length === 0) { %>
                    <h1 class="text-center mb-4 mt-3">You have no orders <i class="fa fa-shopping-bag"></i></h1>
                    <div class="text-center">
                        <img src="/images/noorder.png"
                            class="img-fluid"><br>
                        <a href="/user/home" class="btn rounded-pill border-success text-center my-3 text-success w-25">Back
                            To Shopping</a>
                    </div>
                <% } else { %>
                <% orderData.forEach((order)=> { %>
                    <div class="col-lg-12">
                        <div class="order-card mb-4 shadow">
                            <h4 class="text-satrt">Order #<%-order.oid%></h4>
                            <div class="progress">
                                <% if (order.orderStatus === 'Pending') { %>
                                    <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                                <% } else if (order.orderStatus === 'Processing') { %>
                                    <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                <% } else if (order.orderStatus === 'Placed') { %>
                                    <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                <% } else if (order.orderStatus === 'Shipped') { %>
                                    <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                                <% } else if (order.orderStatus === 'Delivered') { %>
                                    <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                                <% } else if (order.orderStatus === 'Cancelled') { %>
                                    <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">Cancelled</div>
                                <% } else if (order.orderStatus === 'Returned') { %>
                                    <div class="progress-bar progress-bar-striped bg-warning" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">Returned</div>
                                <% } %>
                            </div>
                            
                            
                            <div class="mt-3 text-end">
                                <p class="order-details">Date: <strong>
                                        <%= order.orderedAt%>
                                    </strong></p>
                            </div>
                            <% order.productDetails.forEach((product)=> { %>
                                <!-- Product Details Display -->
                                <div class="product-item mt-5">
                                    <div class="row align-items-center">
                                        <div class="col-md-4">
                                            <img src="/<%= product.productImage[0] %>" alt="Product Image"
                                                class="order-image img-fluid">
                                            <div class="text-center">
                                                <p class="order-details"><strong>
                                                        <%= product.productsName %>
                                                    </strong></p>
                                            </div>
                                        </div>

                                        <div class="col-md-8">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <p class="order-details">Buyer: <strong>
                                                            <%= order.buyerName%>
                                                        </strong></p>
                                                    <p class="order-details">Size: <strong>
                                                            <%= product.size %>
                                                        </strong></p>
                                                    <p class="order-details">Qty: <strong>
                                                            <%= product.quantity %>
                                                        </strong></p>
                                                </div>
                                                <div class="col-md-6">
                                                    <p class="order-details">Amount: <strong>â‚¹<%= order.totalPrice%>
                                                                </strong></p>
                                                    <p class="order-details">Payment: <strong>
                                                            <%= order.paymentMethod%>
                                                        </strong></p>
                                                    <p class="order-details">Shipping: <strong>
                                                            <%= order.shippingMethod%>
                                                        </strong></p>
                                                </div>
                                            </div>

                                            <div class="text-center">
                                                <% if (order.orderStatus !== 'Delivered' && order.orderStatus !== 'Cancelled' && product.status==true && product.length>1) { %>
                                                    <button class="btn btn-cancel mt-3" data-order-id="<%-order.oid%>" ><i class="fas fa-times-circle"></i> Cancel Product</button>
                                                <% } %>
                                            </div>
                                            
                                            <hr>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>

                                <div class="order-status-bar mt-3 fw-bold">
                                    <% if (order.orderStatus==='Delivered' ) { %>
                                        <div class="status success">
                                            <i class="fas fa-check-circle fa-shake"></i>
                                            <span>Delivered</span>
                                        </div>
                                    <% } else if (order.orderStatus==='Shipped' ) { %>
                                        <div class="status shipped">
                                            <i class="fas fa-shipping-fast fa-flip"></i>
                                            <span>Shipped</span>
                                        </div>
                                    <% } else if (order.orderStatus==='Processing' ) { %>
                                        <div class="status processing">
                                            <i class="fas fa-hourglass-half fa-bounce"></i>
                                            <span>Processing</span>
                                        </div>
                                    <% } else if (order.orderStatus==='Placed' ) { %>
                                        <div class="status placed">
                                            <i class="fas fa-info-circle fa-beat-fade"></i>
                                            <span>Placed</span>
                                        </div>
                                    <% } else if (order.orderStatus === 'Cancelled') { %>
                                        <div class="status cancelled">
                                            <i class="fas fa-times-circle"></i>
                                            <span>Cancelled</span>
                                        </div>
                                    <% } else if (order.orderStatus === 'Returned') { %>
                                        <div class="status returned">
                                            <i class="fas fa-undo-alt"></i>
                                            <span>Returned</span>
                                        </div>
                                    <% } else { %>
                                        <div class="status pending">
                                            <i class="fa-regular fa-clock fa-spin"></i>
                                            <span>Pending</span>
                                        </div>
                                    <% } %>
                                </div>
                                
                                <div class="text-end">
                                    <% if (order.orderStatus === 'Delivered' || order.orderStatus === 'Shipped') { %>
                                        <a class="btn btn-warning"><i class="fas fa-undo-alt"></i> Return Order</a>
                                    <% } else if (order.orderStatus === 'Cancelled') { %>
                                        <p class="text-danger fw-bold">You have cancelled this order</p>
                                    <% } else { %>
                                        <button class="btn btn-danger cancel-order"
                                            data-order-id="<%-order.oid%>" <% if (order.orderStatus === 'Cancelled') { %>disabled<% } %>>
                                            <i class="fas fa-times-circle"></i> Cancel Order
                                        </button>
                                    <% } %>
                                </div>
                                

                        </div>
                    </div>
                    <% }) %>
                    <% } %>
            </div>
        </div>
        <%- include('../partials/user-foot.ejs') %>
            <!-- jQuery -->
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
            <!-- SweetAlert CSS -->
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

            <!-- SweetAlert JS -->
            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

            <script>
                $(document).on('click', '.cancel-order', function () {
                    const orderId = $(this).data('order-id');
                    console.log('Order ID:', orderId);

                    Swal.fire({
                        title: 'Are you sure?',
                        text: 'Do you want to cancel the order?',
                        icon: 'question',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Yes, cancel it!'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            $.ajax({
                                type: 'POST',
                                url: '/user/order/cancel/' + orderId,
                                data: {
                                    orderId: orderId
                                },
                                success: (response) => {
                                    console.log('Response:', response);

                                    if (response.updateStatus) {
                                        location.reload();
                                    }

                                    Swal.fire({
                                        icon: 'success',
                                        title: 'Success!',
                                        text: 'Order Cancelled successfully.',
                                        showConfirmButton: false,
                                        timer: 1500
                                    });
                                },
                                error: function (xhr, status, error) {
                                    console.error('Error:', error);

                                    Swal.fire({
                                        icon: 'error',
                                        title: 'Error!',
                                        text: 'Failed to cancel order.',
                                        showConfirmButton: false,
                                        timer: 1500
                                    });
                                }
                            });
                        }
                    });
                });

            </script>
